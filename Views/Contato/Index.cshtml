@{
    ViewData["Title"] = "Listagem de Contatos";
}
<div class="text-center">
    
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="CriarContato">Adicionar novo contato</a>
    </div>
    <br/>

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn-primary btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    
    @if(TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn-primary btn-danger btn-sm close-alert" arial-label="close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
    
    <br />

    <h1 class="display-4">Listagem de Contatos</h1>


    <div class="text-success">
      <hr>
    </div>
    <table class="table table-success table-striped">
       <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">Celular</th>
          <th scope="col">Ações</th>
        </tr>
      </thead>
      <tbody>
        @if (Model != null)
        {
            foreach (ContatoModel contato in Model)
            {
                <tr>
                  <th scope="row">@contato.Id</th>
                  <td>@contato.Nome</td>
                  <td>@contato.Email</td>
                  <td>@contato.Celular</td>
                  <td>
                      <div class="btn-group" role="group">
                          <a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="EditarContato">Editar</a>
                          <a role="button" class="btn btn-danger" asp-route-id="@contato.Id" asp-controller="Contato" asp-action="ApagarContatoConfirmacao">Apagar</a>
                      </div>
                  </td>
                 </tr>
            }        
        }
      </tbody>
    </table>
</div>
